<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.healthcare.mapper.PermissionMapper">

    <resultMap id="BaseResultMap" type="com.healthcare.entity.Permission">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <!-- 根据角色查询权限列表 -->
    <select id="selectByRole" resultMap="BaseResultMap">
        SELECT p.*
        FROM sys_permission p
        INNER JOIN sys_role_permission rp ON p.id = rp.permission_id
        WHERE rp.role = #{role}
        ORDER BY p.code
    </select>

    <!-- 根据权限码查询 -->
    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT * FROM sys_permission WHERE code = #{code}
    </select>

    <!-- 查询所有权限 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM sys_permission ORDER BY code
    </select>

</mapper>
