<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.healthcare.mapper.PrescriptionItemMapper">

    <resultMap id="BaseResultMap" type="com.healthcare.entity.PrescriptionItem">
        <id column="id" property="id"/>
        <result column="prescription_id" property="prescriptionId"/>
        <result column="drug_id" property="drugId"/>
        <result column="quantity" property="quantity"/>
        <result column="dosage" property="dosage"/>
        <result column="frequency" property="frequency"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO prescription_item (prescription_id, drug_id, quantity, dosage, frequency)
        VALUES (#{prescriptionId}, #{drugId}, #{quantity}, #{dosage}, #{frequency})
    </insert>

    <select id="selectByPrescriptionId" resultMap="BaseResultMap">
        SELECT * FROM prescription_item WHERE prescription_id = #{prescriptionId}
    </select>
</mapper>
