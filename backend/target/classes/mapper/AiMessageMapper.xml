<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.healthcare.mapper.AiMessageMapper">

    <resultMap id="BaseResultMap" type="com.healthcare.entity.AiMessage">
        <id column="id" property="id"/>
        <result column="session_id" property="sessionId"/>
        <result column="sender" property="sender" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        <result column="content" property="content"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_message (session_id, sender, content, created_at)
        VALUES (#{sessionId}, #{sender}, #{content}, NOW())
    </insert>

    <select id="selectBySessionIdOrderByCreatedAtAsc" resultMap="BaseResultMap">
        SELECT * FROM ai_message WHERE session_id = #{sessionId} ORDER BY created_at ASC
    </select>
</mapper>
